.clearfix
  .col-xl-9.col-lg-9.col-md-9.col-sm-9#patch-title
    %h1 Editing patch
  = render 'midi_button'
= render 'midi_control'
= form_tag :patch, method: :patch, id: :patch_form do
  - if @patch.errors.any?
    #error_explanation
      %h2= "#{pluralize(@patch.errors.count, "error")} prohibited this patch from being saved:"
      %ul
        - @patch.errors.full_messages.each do |msg|
          %li= msg

  = render 'form'

.col-sm-12
  = link_to 'Show', @patch
  \|
  = link_to 'Back', patches_path
