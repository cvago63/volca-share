.container
  %h1 New patch

  = form_tag '/patches', method: :post, id: :patch_form do
    - if @patch.errors.any?
      #error_explanation
        %h2= "#{pluralize(@patch.errors.count, "error")} prohibited this patch from being saved:"
        %ul
          - @patch.errors.full_messages.each do |msg|
            %li= msg
    = render 'form'

  = link_to 'Back', patches_path
