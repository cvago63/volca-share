.clearfix
  .col-sm-12#patch-title
    %h1 Edit patch
= form_tag(keys_patch_path(@patch.id), method: :put, id: :patch_form) do
  - if @patch.errors.any?
    #error_explanation
      %h2= "#{pluralize(@patch.errors.count, "error")} prohibited this patch from being saved:"
      %ul
        - @patch.errors.full_messages.each do |msg|
          %li= msg

  = render 'form'

.col-sm-12
  - if @patch.persisted?
    = link_to 'Cancel', user_keys_patch_path(@patch.user.slug, @patch.slug)
= render 'knob_debug'

